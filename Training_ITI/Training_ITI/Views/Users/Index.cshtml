@model IEnumerable<Training_ITI.Models.User>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>
<p><a asp-action="Create" class="btn btn-success">Add User</a></p>

<table class="table table-striped">
    <thead>
        <tr><th>Name</th><th>Email</th><th>Role</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
