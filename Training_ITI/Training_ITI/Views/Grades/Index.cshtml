@model IEnumerable<Training_ITI.Models.Grade>
@{
    ViewData["Title"] = "Grades";
}
<h2>Grades</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="traineeId" class="form-select">
            <option value="">-- All Trainees --</option>
            @foreach (var t in (IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Trainees)
            {
                <option value="@t.Value" selected="@(ViewBag.SelectedTraineeId?.ToString() == t.Value ? "selected" : null)">@t.Text</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Filter</button>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-success">Add Grade</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr><th>Trainee</th><th>Course / Session</th><th>Value</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Trainee?.Name</td>
                <td>@g.Session?.Course?.Name (@g.Session?.StartDate.ToString("yyyy-MM-dd"))</td>
                <td>@g.Value</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@g.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
